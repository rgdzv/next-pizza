{
    "compilerOptions": {
        "target": "es2022",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "noEmit": true,
        "incremental": true,
        "module": "esnext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "plugins": [
            {
                "name": "next"
            },
            {
                "name": "typescript-plugin-css-modules"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "*": ["./src/*"]
        }
    },
    "include": [
        "src/app/declarations/**/*.d.ts",
        "next-env.d.ts",
        ".next/types/**/*.ts",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": ["node_modules"]
}
